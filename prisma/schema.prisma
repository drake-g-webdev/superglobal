// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model User {
  id              String    @id @default(cuid())
  email           String    @unique
  emailVerified   DateTime?
  password        String?
  name            String?
  image           String?
  profileComplete Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  profile  Profile?
  trips    Trip[]
}

model Profile {
  id String @id @default(cuid())

  // Basic info
  countryOfOrigin String?
  passportCountry String?
  travelStyle     String? // solo, couple, group, family

  // Travel preferences
  riskTolerance     String? // low, medium, high
  comfortThreshold  String[] // hotels, hostels, tents, van, couchsurfing
  travelPace        String? // slow, moderate, fast
  hygieneThreshold  String? // daily, every_3_days, broke_backpacker_mode

  // Activity preferences (0-100 weights)
  partyWeight       Int @default(50)
  natureWeight      Int @default(50)
  cultureWeight     Int @default(50)
  adventureWeight   Int @default(50)
  relaxationWeight  Int @default(50)

  // Food & Gear
  foodPreference        String? // streetFood, restaurants, cooking, mixed
  packWeight            String? // minimalist, moderate, maximalist
  electronicsTolerance  String? // low, medium, high

  // Budget & Income
  budgetStyle   String? // brokeBackpacker, flashpacker, digitalNomad
  incomeType    String? // remoteWorker, seasonalWorker, savingsOnly, passiveIncome
  monthlyBudget Int?

  // Safety preferences
  nightWalking   Boolean @default(false)
  motorbikeOk    Boolean @default(false)
  couchsurfingOk Boolean @default(false)
  femaleSafety   Boolean @default(false)

  // Content creation
  instagramSpots            Boolean @default(false)
  hiddenGems                Boolean @default(false)
  videoLocations            Boolean @default(false)
  sunriseSunsetOptimization Boolean @default(false)

  // Travel history & interests
  countriesVisited String[]
  bucketList       String[]
  interests        String[]
  restrictions     String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Trip {
  id String @id @default(cuid())

  // Basic trip info
  destination       String
  duration          Int // days
  startDate         DateTime?
  dailyBudget       Int?
  preferredLanguage String   @default("en")
  tripSetupComplete Boolean  @default(false)

  // Transport & Accommodation preferences
  transportStyles     String[]
  accommodationStyles String[]
  dealBreakers        String[]

  // Trip goals
  goals       String[]
  customGoals String[]

  // Safety overrides
  overrideNightWalking   Boolean?
  overrideMotorbikes     Boolean?
  overrideCouchsurfing   Boolean?
  overrideInstagram      Boolean?
  overrideHiddenGems     Boolean?

  // Visa info
  needsVisa     Boolean @default(false)
  visaOnArrival Boolean @default(false)
  visaNotes     String?

  // Map settings
  mapCenter Json?
  mapZoom   Float?

  // Events data
  eventsLastFetched   DateTime?
  eventsTravelAdvisory String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  chats              Chat[]
  costItems          CostItem[]
  mapPins            MapPin[]
  itineraryStops     ItineraryStop[]
  bucketListItems    BucketListItem[]
  packingItems       PackingItem[]
  touristTraps       TouristTrap[]
  tripEvents         TripEvent[]
  conversationVars   ConversationVariable[]
}

model ItineraryStop {
  id       String @id @default(cuid())
  location String
  days     Int
  notes    String?
  order    Int

  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)
}

model Chat {
  id        String   @id @default(cuid())
  title     String?
  destination String?
  budget    String?
  tripSetupComplete Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)

  messages           Message[]
  extractedLocations ExtractedLocation[]
  extractedCosts     ExtractedCostItem[]
}

model Message {
  id        String   @id @default(cuid())
  role      String   // user, assistant
  content   String   @db.Text
  createdAt DateTime @default(now())

  chatId String
  chat   Chat   @relation(fields: [chatId], references: [id], onDelete: Cascade)
}

model CostItem {
  id          String   @id @default(cuid())
  name        String
  category    String   // accommodation, food, transport_local, transport_flights, activities, visa_border, sim_connectivity, moped_rental, misc
  amount      Float
  quantity    Float    @default(1)
  unit        String?  // night, day, trip, person, meal, month, week
  notes       String?
  createdAt   DateTime @default(now())

  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)
}

model MapPin {
  id          String   @id @default(cuid())
  name        String
  type        String   // accommodation, restaurant, activity, historic, transport, city, other
  description String?
  coordinates Json     // [lng, lat]
  sourceMessageIndex Int?
  createdAt   DateTime @default(now())

  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)
}

// NEW: Bucket list items for trip
model BucketListItem {
  id        String   @id @default(cuid())
  text      String
  completed Boolean  @default(false)
  category  String?  // experience, food, adventure, culture, photography, other
  createdAt DateTime @default(now())

  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)
}

// NEW: Packing list items for trip
model PackingItem {
  id        String   @id @default(cuid())
  name      String
  category  String   // clothing, electronics, toiletries, documents, gear, medical, misc
  packed    Boolean  @default(false)
  quantity  Int      @default(1)
  notes     String?
  createdAt DateTime @default(now())

  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)
}

// NEW: Tourist trap warnings for trip
model TouristTrap {
  id                 String   @id @default(cuid())
  name               String
  description        String
  location           String?
  sourceMessageIndex Int?
  createdAt          DateTime @default(now())

  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)
}

// NEW: Events/festivals discovered for trip dates
model TripEvent {
  id                String   @id @default(cuid())
  name              String
  eventType         String   // festival, concert, holiday, market, sports, cultural, other
  dateRange         String
  location          String
  description       String   @db.Text
  isFree            Boolean  @default(false)
  estimatedPriceUsd Float?
  budgetTip         String?
  backpackerRating  Int      @default(3) // 1-5
  isInterested      Boolean  @default(false)
  createdAt         DateTime @default(now())

  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)
}

// NEW: Conversation variables learned from AI chat
model ConversationVariable {
  id        String   @id @default(cuid())
  key       String   // places_discussed, places_to_avoid, activity_preferences, etc.
  value     Json     // Array of strings or object
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)

  @@unique([tripId, key])
}

// NEW: Extracted locations from AI responses (per message)
model ExtractedLocation {
  id           String   @id @default(cuid())
  messageIndex Int
  name         String
  type         String   // accommodation, restaurant, activity, historic, transport, city, other
  description  String?
  area         String?
  createdAt    DateTime @default(now())

  chatId String
  chat   Chat   @relation(fields: [chatId], references: [id], onDelete: Cascade)
}

// NEW: Extracted costs from AI responses (per message)
model ExtractedCostItem {
  id           String   @id @default(cuid())
  messageIndex Int
  name         String
  category     String   // accommodation, transport_local, transport_flights, food, activities, visa_border, sim_connectivity, moped_rental, misc
  amount       Float
  quantity     Float    @default(1)
  unit         String   // night, day, meal, trip, person, month, week
  notes        String?
  textToMatch  String?  // For button placement in UI
  createdAt    DateTime @default(now())

  chatId String
  chat   Chat   @relation(fields: [chatId], references: [id], onDelete: Cascade)
}
